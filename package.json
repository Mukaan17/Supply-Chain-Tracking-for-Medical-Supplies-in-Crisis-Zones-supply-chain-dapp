{
  "name": "supply-chain-dapp",
  "version": "3.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Mukaan17/Supply-Chain-Tracking-for-Medical-Supplies-in-Crisis-Zones-supply-chain-dapp"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/react": "^7.91.0",
    "@tanstack/react-query": "^5.90.11",
    "@testing-library/dom": "^10.4.1",
    "autoprefixer": "^10.4.22",
    "ethers": "^6.15.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.300.0",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwindcss": "^3.4.18",
    "viem": "^2.40.3",
    "wagmi": "^2.19.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:production": "npm audit --production --audit-level=high",
    "security:scan": "npm audit --audit-level=moderate && npm run lint",
    "analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "type-check": "tsc --noEmit || true"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@craco/craco": "^7.1.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "identity-obj-proxy": "^3.0.0",
    "react-app-rewired": "^2.2.1",
    "typescript": "^5.9.3"
  }
}
