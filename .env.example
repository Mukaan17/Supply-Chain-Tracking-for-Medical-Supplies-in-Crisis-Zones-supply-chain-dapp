# Supply Chain dApp Environment Configuration
# Copy this file to .env and update with your values

# Required: Contract Address
# The deployed contract address (can be network-specific or default)
REACT_APP_CONTRACT_ADDRESS=

# Optional: Network-specific contract addresses (takes precedence over REACT_APP_CONTRACT_ADDRESS)
REACT_APP_CONTRACT_ADDRESS_SEPOLIA=
REACT_APP_CONTRACT_ADDRESS_MAINNET=
REACT_APP_CONTRACT_ADDRESS_POLYGON=
REACT_APP_CONTRACT_ADDRESS_ARBITRUM=
REACT_APP_CONTRACT_ADDRESS_OPTIMISM=
REACT_APP_CONTRACT_ADDRESS_LOCALHOST=

# Default Network (default: sepolia)
# Options: sepolia, mainnet, polygon, arbitrum, optimism, localhost
REACT_APP_NETWORK=sepolia

# Analytics Configuration
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# Error Tracking (Sentry)
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_SENTRY_DSN=

# WebSocket Configuration
REACT_APP_ENABLE_WEBSOCKET=false
REACT_APP_WS_URL=

# API Configuration
REACT_APP_API_URL=

# Offline Mode
REACT_APP_ENABLE_OFFLINE_MODE=true

# Cache Configuration (in milliseconds)
REACT_APP_CACHE_TTL=300000

# Transaction Configuration
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=1000
REACT_APP_TRANSACTION_TIMEOUT=300000

# Node Environment
NODE_ENV=development
